{
  "env": {
    "node": true
  },
  "extends": ["eslint:recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "indent": ["warn", 2, { "SwitchCase": 1 }],
    "linebreak-style": ["warn", "unix"],
    "quotes": ["warn", "single"],
    "semi": ["warn", "always"],
    "no-unused-vars": "warn",
    "no-empty": "warn",
    "comma-dangle": ["warn", "never"],
    "eol-last": "warn"
  },
  "globals": {
    "Bun": true
  },
  "ignorePatterns": ["*.js"]
}
